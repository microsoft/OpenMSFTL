{
  "num_client_nodes": 10,
  "fraction_participant_clients": 1,

  "data_config":
  {
    "data_set": "mnist",
    "train_batch_size": 128,
    "infer_batch_size": 5000,
    "dev_split": 0.1,
    "data_dist_strategy": "iid",
    "download": true,
    "num_labels": 10,
    "num_channels": 1
  },

  "learner_config":
  {
    "net": "lenet",
    "comm_rounds": 50
  },

  "client_opt_config":
  {
    "optimizer_scheme": "Adam",
    "lr0": 0.002,
    "weight_decay": 0.0,
    "momentum": 0.9,
    "nesterov": true,
    "amsgrad": true,
    "dampening": 0,
    "num_batches": 25,
    "clip_val": null
  },

  "client_lrs_config":
  {
    "lr_restart": 200,
    "lr_schedule": "MultiStepLR",
    "milestones": [100, 300, 500, 1000, 2000],
    "step_size": 100,
    "gamma": 0.5
  },

  "client_compression_config":
  {
    "num_bits": 2,
    "compression_function": "full",
    "dropout_p": 0.1,
    "fraction_coordinate": 0.1
  },

  "attack_config" :
  {
    "frac_adv": 0.2,
    "attack_mode": "un_coordinated",
    "attack_model": "additive_gaussian",
    "fixed": true,
    "to_scale": false,
    "attack_n_std": 1,
    "attack_std": 3,
    "noise_scale": 5
  }
}
