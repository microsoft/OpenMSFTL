{
  "num_client_nodes": 100,
  "fraction_participant_clients": 0.5,

  "data_config":
  {
    "data_set": "mnist",
    "batch_size": 256,
    "dev_split": 0.1,
    "data_dist_strategy": "iid",
    "seed": 1,
    "download": true,
    "num_labels": 10
  },

  "learner_config":
  {
    "net": "mlp",
    "dim_in": 784,
    "dim_hidden1": 1024,
    "dim_hidden2": 512,
    "drop_p": 0.5,
    "comm_rounds": 200
  },

  "client_opt_config":
  {
    "optimizer_scheme": "SGD",
    "lr0": 0.002,
    "weight_decay": 0.005,
    "momentum": 0.9,
    "batch_size": 64,
    "num_batches": 25
  },

  "client_lrs_config":
  {
    "lr_restart": 100,
    "lr_schedule": "StepLR",
    "step_size": 5,
    "gamma": 0.99
  },

  "client_compression_config":
  {
    "num_bits": 2,
    "compression_function": "full",
    "dropout_p": 0.1,
    "fraction_coordinate": 0.1
  },

  "attack_config" :
  {
    "frac_adv": 0,
    "attack_mode": "coordinated",
    "attack_model": "random_gaussian",
    "attack_n_std": 1.5,
    "noise_scale": 1,
    "attack_std": 1
  }
}