{
  "num_client_nodes": 50,
  "fraction_participant_clients": 0.5,

  "data_config":
  {
    "data_set": "mnist",
    "train_batch_size": 128,
    "infer_batch_size": 500,
    "dev_split": 0.1,
    "data_dist_strategy": "iid",
    "download": true,
    "num_labels": 10,
    "num_channels": 1
  },

  "learner_config":
  {
    "net": "lenet",
    "dim_in": 784,
    "dim_hidden1": 100,
    "dim_hidden2": 50,
    "drop_p": 0.5,
    "comm_rounds": 50
  },

  "client_opt_config":
  {
    "optimizer_scheme": "Adam",
    "lr0": 0.002,
    "weight_decay": 0.0,
    "momentum": 0.9,
    "num_batches": 50
  },

  "client_lrs_config":
  {
    "lr_restart": 200,
    "lr_schedule": "StepLR",
    "step_size": 25,
    "gamma": 0.9
  },

  "client_compression_config":
  {
    "num_bits": 2,
    "compression_function": "full",
    "dropout_p": 0.1,
    "fraction_coordinate": 0.1
  },

  "attack_config" :
  {
    "frac_adv": 0,
    "attack_mode": "coordinated",
    "attack_model": "random_gaussian",
    "attack_n_std": 1.5,
    "noise_scale": 1,
    "attack_std": 1
  }
}
